<div class="text-center">
  <h1 class="h3">
    <%= controller_name.humanize + ":" %>
    <%= action_name.humanize %>
    <div class="badge badge-info"><%= @users.count %></div>
  </h1>
</div>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Email</th>
      <th>Users</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.id, user %></td>
      <td><%= user.email %></td>
      <td><%= user.tenants.compact.join(', ') %></td>
    </tr>
    <% end %>
  </tbody>
</table>
